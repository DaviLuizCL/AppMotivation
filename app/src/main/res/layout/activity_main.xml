<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_opcoes"
        android:orientation="horizontal"
        android:background="#064304">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_all_incluse"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"

            android:src="@drawable/ic_happy"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"

            android:src="@drawable/ic_sunny"/>



    </LinearLayout>




    <TextView
        android:id="@+id/text_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/o_medo_me_faz_ter_certeza_que_estou_no_caminho_certo"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textSize="20sp" />

    <View
        android:id="@+id/view_hello"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="3dp"
        android:background="@color/dark_green"
        android:elevation="5dp"
        android:layout_below="@+id/text_phrase"
        android:layout_marginTop="5sp"/>

    <TextView
        android:id="@+id/text_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ol_kotlin"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear_opcoes"/>

    <Button
        android:id="@+id/button_new_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_green"
        android:textColor="@color/white"
        android:text="@string/nova_frase"
        android:textSize="20sp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20sp"

        />


</RelativeLayout>